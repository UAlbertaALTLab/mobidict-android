MainLayout:

<MainLayout>:
    orientation: "vertical"
    BoxLayout:
        size_hint: 1, 0.3
        Label:
            text: ""
            size_hint: 0.1, None
            height: "40dp"
        Image:
            source: 'images/itwewina.png'
            size_hint: None, None
            height: "35dp"
            width: "40dp"
            pos_hint: {"y": 0.25}
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            Label:
                text: "itwÃªwina"
                font_size: 20
                text_size: self.size
                color: (0.635, 0.105, 0.105, 1)
                halign: 'left'
                valign: 'bottom'
                pos_hint: {"x": 0.01}
            Label:
                text: "Plains Cree Dictionary"
                color: (0, 0, 0, 1)
                font_size: 11
                text_size: self.size
                halign: 'left'
                valign: 'top'
                pos_hint: {"x": 0.01}

            
        
    TextInput:
        id: input_word
        multiline: False
        size_hint: 0.8, None
        height: "35dp"
        pos_hint: {"center_x": 0.5}
        hint_text: "Search in Cree or English"
        on_text_validate: root.on_submit_word(self)
    Label:
        id: result_label
        text: root.results_print_str
        bold: True
        font_size: 20
        color: (0, 0, 0, 1)
    FitImage:
        # source: 'images/footer.jpg'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/footer.jpg'
        

